#!/bin/bash

a=192.168.0.
#pedir el ultimo digito del ip
echo "numero" 
read s
#concatenar variable a con variable s
b=$a$s
echo "Conectando..."
echo "Ingrese la ruta donde guardar el archivo en termux"
read rt
echo "Ingrese el nombre del archivo"
read arch
n="/data/data/com.termux/files/home/"
echo "ingrese la contrase√±a"
#conectar a pc linux
ssh-keygen -f "~/.ssh/known_hosts2" -R "[${b}]"
sshpass -p ciro scp -P 8022 $arch u0_a338@$b:$n$rt
sshpass -p ciro scp -P 8022 $arch u0_a338@$b:$n$rt
sshpass -p ciro scp -P 8022 $arch u0_a153@$b:$n$rt
scp -P 8022 $arch u0_a338@$b:$n$rt
scp -P 8022 $arch u0_a153@$b:$n$rt

